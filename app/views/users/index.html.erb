<h2>ユーザー</h2>
<% @users.each do |user| %>
  <% if user.id != current_user.id %>
  <ul>
    <li>
      <div class="item">
        <%= link_to user.name, user_path(user.id) %>
        <%= link_to(
          'メッセージ',
          conversations_path(
            sender_id: current_user.id, recipient_id: user.id
          ),
          method: :post
        ) %>
      </div>
    </li>

    <li><%= render 'follow_form', user: user %></li>
  </ul>
  <% end %>
<% end %>
