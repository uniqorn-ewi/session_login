<div id="follow_form_<%= user.id %>">
  <% unless current_user.following?(user) %>
    <%= form_with(
      model: current_user.active_relationships.new(followed_id: user.id)
    ) do |f| %>
      <%= f.hidden_field :followed_id %>
      <%= f.submit 'Follow' %>
    <% end %>
  <% else %>
    <%= form_with(
      model: current_user.active_relationships.find_by(followed_id: user.id),
      method: :delete
    ) do |f| %>
      <%= f.submit 'Unfollow' %>
    <% end %>
  <% end %>
</div>
